@using TodoSeUsa.Models.ViewModels;
@model BillProductViewModel

@{
    int counter = 0;
    ViewData["Title"] = "Productos de la factura";
    int billId = Model.Bill.BillId;
}
<div class="positon-relative d-flex justify-content-center mb-4">
    <a class="btn btn-secondary position-absolute align-self-center start-0 me-4" asp-controller="Bills" asp-action="Index"><i class="fas fa-arrow-left"></i></a>
    <h1 class="flex-grow-1 ms-5 text-center">Productos de la factura Cod: @Html.DisplayFor(model => model.Bill.BillId) de @Model.Bill.Client.FirstName @Model.Bill.Client.LastName Cod. Cliente: @Model.Bill.ClientId </h1>
</div>

<a class="btn btn-primary mb-4" asp-action="Create" asp-controller="Products" asp-route-id="@billId">Agregar un producto</a>

<hr />
@if (Model != null && Model.Products.Count() != 0)
{

    @foreach (var item in Model.Products)
    {
        <!-- accordion -->
        <div class="accordion mb-2" id="accordion@($"{counter}")">
            <div class="accordion-item">
                <!-- accordion header -->
                <div class="accordion-header" id="heading@($"{counter}")">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@($"{counter}")" aria-expanded="true" aria-controls="collapse@($"{counter}")">
                        <div class="d-inline-flex w-100 justify-content-around">

                            <p class="mb-auto">
                                Cod. Producto: @item.ProductId
                            </p>
                            <p class="mb-auto">
                                Cod. Factura: @item.BillId
                            </p>
                            <p class="mb-auto">
                                Prenda: @item.Type
                            </p>
                            <p class="mb-auto">
                                Estado: @item.State
                            </p>
                            <p class="mb-auto">
                                Precio: @item.Price
                            </p>
                        </div>
                    </button>
                </div>
                <div id="collapse@($"{counter}")" class="accordion-collapse collapse" aria-labelledby="heading@($"{counter}")" data-bs-parent="#accordion@($"{counter}")">
                    <!-- accordion body -->
                    <div class="accordion-body">
                        <!-- dropdown options menu -->
                        <div class="d-flex justify-content-center">
                            <h3>Producto de @Model.Bill.Client.FirstName @Model.Bill.Client.LastName Cod. cliente Nro @Model.Bill.ClientId</h3>
                        </div>
                        <div class="dropdown d-flex flex-row-reverse">
                            <a class="btn btn-outline-success dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-cog"></i>
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item action-button" asp-controller="Products" asp-action="Edit" asp-route-id="@item.ProductId">Editar</a>
                            </div>
                        </div>
                        <!-- content table -->
                        <table class="table">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th>Cod. Producto</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductId)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Cod. Factura</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BillId)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Precio</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Descripción</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Estado</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.State)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Tipo</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Type)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Vendido</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sold)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Reacondicionado</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Reaconditioned)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Costo Reacondicionamiento</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReaconditioningCost)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Devolver</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MustReturn)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Devuelto</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Returned)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Condicion</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Condition)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Activo</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Active)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        counter++;
    }
}
else
{
    <h5>No existen productos!</h5>
}

<div class="d-flex justify-content-end pe-2">
    <a class="btn btn-primary text-center" asp-action="Create" asp-controller="Products" asp-route-id="@billId"><i class="fas fa-plus"></i></a>
</div>

<hr />

<a class="btn btn-secondary align-self-center" asp-controller="Bills" asp-action="Index"><i class="fas fa-arrow-left"></i> Volver a las facturas</a>
