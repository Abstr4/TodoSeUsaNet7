@{
    ViewData["Title"] = "Home";
}
<head>
    <link rel="stylesheet" href="~/css/home.css" type="text/css" />
</head>

<div class="d-flex justify-content-center align-items-center w-100 h-100">
    <div class="row">
        <div class="col-12 col-sm-6">
            <a class="card btn button button-w-shadow" asp-controller="Clients" asp-action="Index">
                <div class="card-body d-flex justify-content-center align-items-center">
                    <i class="fa-2x far fa-smile"></i>
                    <h5 class="card-title">Clientes</h5>
                </div>
            </a>
        </div>
        <div class="col-12 col-sm-6">
            <a class="card btn button button-w-shadow" asp-controller="Bills" asp-action="Index">
                <div class="card-body d-inline-flex justify-content-center align-items-center">
                    <i class="fa-2x fas fa-receipt"></i>
                    <h5 class="card-title">Facturas</h5>
                </div>
            </a>
        </div>
        <div class="col-12 col-sm-6">
            <a class="card btn button button-w-shadow" asp-controller="Products" asp-action="Index">
                <div class="card-body d-flex justify-content-center align-items-center">
                    <svg width="2em" height="2em" viewBox="0 0 640 512" style="min-width: fit-content;min-height: fit-content;"><path d="M211.8 0c7.8 0 14.3 5.7 16.7 13.2C240.8 51.9 277.1 80 320 80s79.2-28.1 91.5-66.8C413.9 5.7 420.4 0 428.2 0h12.6c22.5 0 44.2 7.9 61.5 22.3L628.5 127.4c6.6 5.5 10.7 13.5 11.4 22.1s-2.1 17.1-7.8 23.6l-56 64c-11.4 13.1-31.2 14.6-44.6 3.5L480 197.7V448c0 35.3-28.7 64-64 64H224c-35.3 0-64-28.7-64-64V197.7l-51.5 42.9c-13.3 11.1-33.1 9.6-44.6-3.5l-56-64c-5.7-6.5-8.5-15-7.8-23.6s4.8-16.6 11.4-22.1L137.7 22.3C155 7.9 176.7 0 199.2 0h12.6z" /></svg>
                    <h5 class="card-title">Productos</h5>
                </div>
            </a>
        </div>
        <div class="col-12 col-sm-6">
            <a class="card btn button button-w-shadow disabled" asp-controller="Clients" asp-action="Index">
                <div class="position-absolute top-0 end-0 p-2">
                    <p class="text-danger">Incoming feature!</p>
                </div>
                <div class="card-body d-flex justify-content-center align-items-center">
                    <i class="fa-2x fas fa-cash-register"></i>
                    <h5 class="card-title">Ventas</h5>
                </div>
            </a>
        </div>
    </div>
</div>

